<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_5">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:foreground="@color/overlay_dark_30"
            android:scaleType="centerCrop"
            android:src="@drawable/medical_bg" />


        <ImageButton
            android:id="@+id/btn_Atras"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:layout_marginTop="-145dp"
            android:layout_gravity="left"
            android:background="@drawable/flecha_atras"
            />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/usuario"
            app:civ_border="true"
            app:civ_shadow="true"
            app:civ_shadow_radius="0"
            app:civ_border_color="@color/grey_10"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txt_nombres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_serif"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_apellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/pt_serif"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_weight="1"
            android:text="TextView" />

         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="15dp">

             <TextView
                 android:id="@+id/textView9"
                 android:layout_width="130dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/black"
                 android:text="Cédula de identidad"
                 android:fontFamily="@font/pt_serif"

                 />

             <TextView
                 android:id="@+id/txt_Ci"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:fontFamily="@font/pt_serif"
                 android:textAlignment="textEnd"
                 android:text="TextView" />

         </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"

                android:fontFamily="@font/pt_serif"
                android:textColor="@color/black"
                android:text="Tipo de vacuna:" />

            <TextView
                android:id="@+id/txt_vacuna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/pt_serif"
                android:layout_weight="1"
                android:text="TextView" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"

                android:fontFamily="@font/pt_serif"
                android:textColor="@color/black"
                android:text="Centro de Acopio" />

            <TextView
                android:id="@+id/txt_Centro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/pt_serif"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="15dp">



            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pt_serif"
                android:text="Fecha" />

            <TextView
                android:id="@+id/txtFechaTurno"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_serif"
                android:layout_weight="1"
                android:text="TextView" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="15dp">


            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pt_serif"
                android:textColor="@color/black"
                android:text="Hora" />

            <TextView
                android:id="@+id/txtHoraTurno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/pt_serif"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="15dp">


            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pt_serif"
                android:textColor="@color/black"
                android:text="Dirección en Google Maps" />

            <TextView
                android:id="@+id/txt_urlMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pt_serif"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:text="TextView" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btn_Salir"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cerrar Sesion"
                android:background="@drawable/btn_ingresar_login"
                />
        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>





