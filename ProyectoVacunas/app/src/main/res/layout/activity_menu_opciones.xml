<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuOpciones"
    android:background="@drawable/login_bg"
    >

    <LinearLayout
        android:layout_width="962px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="50px"
        >
        <TextView
            android:id="@+id/textMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pt_serif"
            android:text="Menú Principal"
            android:textColor="@color/white"
            android:textSize="72px" />


        <androidx.cardview.widget.CardView
            android:id="@+id/btnGeneracion"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:clickable="true"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ticket"
                    />
                <TextView
                    android:text="Generación de turno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gris"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnInformacion"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:clickable="true"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/jeringa"


                    />
                <TextView
                    android:text="Información de Vacunas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gris"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnTurno"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:clickable="true"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/detalles"
                    />
                <TextView
                    android:text="Ver Turnos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gris"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesion"
            android:onClick=""
            />

    </LinearLayout>




</LinearLayout>