<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generacion de turnos" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione el Sector:" />

    <Spinner
        android:id="@+id/txtSector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/ComboSector" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione el tipo de vacuna:" />

    <Spinner
        android:id="@+id/txtVacunas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/ComboVacunas" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione el centro de acopio:" />

    <Spinner
        android:id="@+id/txtCentrosAcopio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/ComboCentrosAcopio" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UbicaciÃ³n de Centros de Acopio en Google Maps:" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="503dp">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="505dp"
            tools:context=".MapsActivity" />

        <Button
            android:id="@+id/btnSatelite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satelite" />

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generar" />

</LinearLayout>