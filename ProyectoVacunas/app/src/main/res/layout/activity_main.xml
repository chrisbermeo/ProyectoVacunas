<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/login_bg"
    >
    
    <LinearLayout
        android:layout_width="962px"
        android:layout_height="1190px"
        android:orientation="vertical"
        android:background="@drawable/login_redondeado"
        android:layout_gravity="center"
        android:layout_marginTop="200px"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pt_serif"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="72px" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="871px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pt_serif"
            android:text="Correo electrónico"
            android:textSize="36px" />

        <EditText
            android:id="@+id/txtCorreo"
            android:layout_width="871px"
            android:layout_height="136.5px"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:fontFamily="@font/pt_sans_caption"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="871px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pt_serif"
            android:text="Contraseña"
            android:textSize="36px" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="871px"
            android:layout_height="136.5px"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:fontFamily="@font/pt_sans_caption"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="641px"
            android:layout_height="108px"
            android:text="Ingresar"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_ingresar_login"
            android:textColor="@drawable/txt_btn_ingresar"
            />

        <TextView
            android:id="@+id/tvRegistrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:fontFamily="@font/pt_sans_caption"
            android:text="¿No tienes cuenta? Regístrate"
            android:textColor="@color/azul_texto"
            android:textSize="16dp"></TextView>




    </LinearLayout>



</LinearLayout>